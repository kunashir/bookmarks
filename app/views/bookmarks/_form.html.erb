<div class="row d-flex justify-content-center">
  <div class="col-lg-9">
    <% if @bookmark.errors.any? %>
      <% @bookmark.errors.full_messages.each do |message|%>
        <h3 class="alert alert-warning"><%= message %> </h3>
      <% end %>
    <% end %>
    <%= form_for @bookmark do |f| %>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="mb-3">
        <label for="url" class="form-label">URL</label>
        <%= f.text_field :url, class: "form-control" %>
      </div>
      <div class="mb-3">
        <label for="shortening" class="form-label">Shortening</label>
        <%= f.text_field :shortening, class: "form-control" %>
      </div>
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Cancel", bookmarks_url,  class: "btn btn-secondary" %>
    <% end %>
  </div>
</div>
